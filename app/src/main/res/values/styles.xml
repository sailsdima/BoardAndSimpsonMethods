<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="linearLayoutExpertManagementStyle">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">#edefff</item>
    </style>

    <style name="linearLayoutHeaderView">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:background">#ececec</item>
    </style>

    <style name="textViewFragment">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingRight">5dp</item>
    </style>


    <style name="textViewFragmentGreen" parent="textViewFragment">
        <item name="android:textColor">#138c03</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
     </style>

    <style name="textViewFragmentRedError" parent="textViewFragment">
        <item name="android:textColor">#8c0305</item>
     </style>


    <style name="editTextFragment">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="buttonFragment">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/primary_round</item>
    </style>

    <style name="buttonFragmentGreen">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/primary_round_green</item>
    </style>

    <style name="buttonFragmentYellow">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/primary_round_yellow</item>
    </style>

    <style name="textViewExpertItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="simpleSpinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem</item>
        <item name="android:checkMark">?android:attr/listChoiceIndicatorSingle</item>
    </style>
</resources>
