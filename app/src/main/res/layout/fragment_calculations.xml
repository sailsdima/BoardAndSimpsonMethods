<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ui.CalculationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonBoardMethod"
            style="@style/buttonFragmentYellow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/board" />

        <Button
            android:id="@+id/buttonSimpsonMethod"
            style="@style/buttonFragmentYellow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/simpson" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewCalculation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textViewFragment"
            android:textSize="16sp"/>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textViewWinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textViewFragmentGreen"/>

    <TextView
        android:id="@+id/textViewErrorMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textViewFragmentRedError"/>


</LinearLayout>
